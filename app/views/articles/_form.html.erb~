<%= javascript_include_tag "tiny_mce/tiny_mce" %>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :name => "main_editor" %>
  </p>
  <!--<script type="text/javascript">
	  CKEDITOR.replace( 'main_editor' );
  </script>-->
  <p>
    <%= f.label :author %><br />
    <%= select("author", "id", @authors.map {|a| [a.fname + " " + a.lname,a.id]}) %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= select("category", "id", @categories.map {|c| [c.name,c.id]}) %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

