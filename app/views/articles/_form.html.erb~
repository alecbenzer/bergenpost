<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= select("author", "id", @authors.map {|a| [a.fname + " " + a.lname,a.id]}) %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>

