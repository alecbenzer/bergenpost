<%= javascript_include_tag "ckeditor/ckeditor" %>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <script type="text/javascript">
	  CKEDITOR.replace( 'article[body]' );
  </script>
  <h5>Note: Any images you want to add must first be uploaded through <a href="/upload">/upload</a>. We will try and make this easier in the future.</h5>
  <p>
    <%= f.label :author %><br />
    <%= select("author", "id", @authors.map {|a| [a.fname + " " + a.lname,a.id]}) %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= select("category", "id", @categories.map {|c| [c.name,c.id]}) %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>

