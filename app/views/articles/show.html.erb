                    <li>September</li>
                    <li>October</li>
                    <li>November</li>
                    <li>December</li>
                    </ul>
   	    	    </div>
		</div>
        <div class="comments">
        	<div class="block_inside">
            <h3>Comments</h3>
            <% @article.comments.each do |comment| %>
            <h6><%= h comment.name %> (<%= time_ago_in_words comment.created_at %> ago)</h6>
            <p><%= h comment.body %></p>
                            ------------------------------------
            <% end %>
            <% form_for [@article, Comment.new] do |f| %> 
              <p>
                <%= f.label :name, "Name:" %>
                <%= f.text_field :name %>
              </p>
              <p>
                <%= f.label :body, "Comment:" %>
                <%= f.text_area :body, :cols => 50, :rows => 5 %> 
              </p>
              <%= f.submit "Submit" %>
           <% end %>
